
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<form action="/products/create" method="post">
    <div class="form-group">
        <label>Product Id</label>
        <input type="text" class="form-control" id="txtProductId" placeholder="Product Id" name="ProductId"/>
    </div>
    <div class="form-group">
        <label>Product Name</label>
        <input type="text" class="form-control" id="txtProductName" placeholder="Product Name" name="ProductName"/>
    </div>
    <div class="form-group">
        <label>Rate</label>
        <input type="text" class="form-control" id="txtRate" placeholder="Rate" name="Rate"/>
    </div>
    <button class="btn btn-success">Submit</button>
</form>

